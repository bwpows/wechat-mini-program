page {
    --body-width: 480px;
    --card-width: 350px;
    --card-height: 24px;
    --img-height: 226px;
    --img-height-expanded: 320px;
    
    background-color: #eee;
  }

  .close-icon {
    width: 30rpx; height: 30rpx; border-radius: 30rpx; transform: rotate(45deg);
  }
  
  .card {
    border-radius: 1rem;
    transition: .3s all cubic-bezier(0, 1, 0.95, 1.05);
    z-index: 100;
    height: 406rpx;
    background: white;
  }
  
  .card image {
    display: block;
    height: 300rpx;
    object-fit: cover;
    
    border-top-left-radius: 1rem;
    border-top-right-radius: 1rem;
  }
  
  
  .card .content-wrapper {
    height: 0;
    overflow: hidden;
    transition: .3s all ease-out;
    opacity: .8;
  }

  
  /* active classes below */
  
  .card.active {
    transform-origin: 50% 0;
    border-radius: 0;
    z-index: 3000;
    width: 100vw;
    margin-left: -4rpx;
  }

  .card.active .card-title{
    border-radius: 0;
  }
  
  /* .card.active.h4 {
    padding-bottom: .8rem;
  } */
  
  /* .card.active .swripe image {
    border-top-left-radius: 0;
    border-top-right-radius: 0;
    height: var(--img-height-expanded);
  } */

  .card.active image {
    border-top-left-radius: 0;
    border-top-right-radius: 0;
    height: var(--img-height-expanded);
  }
  
  .card.active .swripe {
    border-top-left-radius: 0;
    border-top-right-radius: 0;
    height: var(--img-height-expanded);
  }
  
  .card.active .content-wrapper {
    height: 100vh;
    transition: .3s all ease-in;
    opacity: 1;
    background-color: #fff;
  }