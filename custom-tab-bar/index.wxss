.tab-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #f8f6f4;
  display: flex;
  padding: 30rpx 0rpx;
  margin-bottom: env(safe-area-inset-bottom);
  margin-left: 32rpx;
  margin-right: 32rpx;
  border-radius: 100rpx;
  transition: all .3s;
}


.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item cover-image {
  width: 54rpx;
  height: 54rpx;
}

